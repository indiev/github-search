{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NEXT_PUBLIC_API_BASE_URL",
    "NODE_ENV",
    "APP_PORT",
    "APP_HOST",
    "PORT",
    "HOST",
    "CYPRESS_BASE_URL",
    "E2E_SERVER_MODE",
    "E2E_SKIP_BUILD",
    "GITHUB_TOKEN",
    "MOCK_GITHUB_API"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test:e2e": {
      "dependsOn": ["^build", "build"],
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "test:component": {
      "cache": false,
      "inputs": ["src/**", "cypress.config.ts", "cypress/**"]
    }
  }
}
