{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "types": [
      "@testing-library/jest-dom",
      "@testing-library/jest-dom/jest-globals",
      "jest",
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    "eslint.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "cypress"]
}
